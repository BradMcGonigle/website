{
  "extends": "configs.typescript/tsconfig.nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "#content": ["./src/content"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "e2e/**/*.ts",
    "next.config.ts",
    "playwright.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "velite.config.ts",
    ".velite"
  ]
}
